{
  "name": "rdf",
  "version": "0.0.1-alpha.1",
  "description": "backend of random food (rdf)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:watch": "NODE_ENV=development nodemon server.js",
    "start:dev": "NODE_ENV=development node run start",
    "start:dev:watch": "NODE_ENV=development node run start:watch",
    "start:prod": "NODE_ENV=production node run start",
    "test:mocha": "mocha --timeout 10000 --colors --exit ./tests/**/*.spec.js",
    "test": "NODE_ENV=test npm run test:mocha",
    "test:watch": "NODE_ENV=test npm test -- --watch",
    "cov": "nyc npm test",
    "cov:check": "nyc check-coverage --lines 70 --functions 70 --statements 70 --branches 70",
    "ci:test": "NODE_ENV=citest nyc npm run test:mocha -- --reporter mocha-junit-reporter",
    "ci:report": "NODE_ENV=citest nyc report --reporter=lcov > coverage.lcov && ./node_modules/.bin/codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamontat/rdf-backend.git"
  },
  "keywords": [
    "food",
    "thai",
    "random",
    "backend",
    "server"
  ],
  "author": "Kamontat Chantrachirathumrong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kamontat/rdf-backend/issues"
  },
  "homepage": "https://github.com/kamontat/rdf-backend#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.29.3",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "codecov": "^3.0.0",
    "mocha": "^4.1.0",
    "mocha-junit-reporter": "^1.15.0",
    "nodemon": "^1.14.10",
    "nyc": "^11.4.1"
  }
}
